@using Application.Account.Command.LogIn
@model LoginCommand
@{
    ViewData["Title"] = "Login";
}

<div class="intro-login">
    <div class="container-fluid" id="intro">
        <div class="intro__inner" id="inner">
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3"></div>
            <div class="col-md-6 shadow mb-5 bg-white rounded align-self-center">
                <form class="login-form  align-middle" id="login-form" asp-controller="Account" asp-action="Login">
                    <div class="form-group" id="form-group">
                        <div class="row">
                            <div class="col-6 text-left">
                                <label for="mail" asp-for="Email" class="text-uppercase"><b>Mail</b></label>
                            </div>
                            <div class="col-6 text-right">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <input type="text" class="form-control input-xs" asp-for="Email" placeholder="Enter Mail" id="mail" required>
                        <div class="row">
                            <div class="col-6 text-left">
                                <label for="psw" asp-for="Password" class="text-uppercase"><b>Password</b></label>
                            </div>
                            <div class="col-6 text-right">
                                <a class="acc" href="#">
                                    Forgot password?
                                </a>
                            </div>
                        </div>
                        <input type="password" class="form-control input-xs" asp-for="Password" placeholder="Enter Password" id="psw" required>
                        <div class="row">
                            <div class="col-6 text-left">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" asp-for="RememberMe" class="custom-control-input" id="remember">
                                    <label class="custom-control-label" for="remember">Remember me</label>
                                </div>
                            </div>
                            <div class="col-6"></div>
                        </div>
                        <input class="btn btn-log" type="submit" value="Sign In" class="btn btn-success">
                        <a class="btn btn-goog">
                            <span class="fa fa-google"></span>
                        </a>
                    </div>
                    <div class="text-right">
                        Dont have an account?
                        <a class="acc" asp-controller="Account" asp-action="Register">
                            Create one
                        </a>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>


