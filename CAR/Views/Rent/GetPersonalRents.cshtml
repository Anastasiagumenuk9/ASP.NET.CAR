@model Application.Rents.Queries.GetPersonalRentsList.PersonalRentsListVm
@{
    ViewData["Title"] = "GetPersonalRents";
}

<div class="intro-login">
    <div class="container-fluid" id="intro">
        <div class="intro__inner" id="inner"> </div>
    </div>
    <div class="row container-fluid align-self-center align-bottom mt-5">
        <div class="col-1">

        </div>
        <div class="col-10 shadow mt-5 bg-white rounded align-self-center acc-container p-md-5 unselectable">
        <div class="row">
            <table class="table table-bordered text-center">
                <thead>
                    <tr class="tr-color">
                        <th class="tr-color" scope="col">Is Confirmed</th>
                        <th class="tr-color" scope="col">Start Date Rent</th>
                        <th class="tr-color" scope="col">Finish Date Rent</th>
                        <th class="tr-color" scope="col">Date Confirmed</th>
                        <th class="tr-color" scope="col">Price</th>
                        <th class="tr-color" scope="col">Car</th>
                        <th class="tr-color" scope="col">Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rent in Model.Rents)
                    {
                        <tr>
                            <td>@rent.IsConfirmed</td>
                            <td>@rent.StartDataRend</td>
                            <td>@rent.FinishDataRend</td>
                            <td>@rent.DataConfirmed</td>
                            <td>@rent.Price $</td>
                            <td>@rent.Car</td>
                            <td>@rent.Location</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        </div>
    </div>
</div>

