                                    <option asp-for="Name" value="@city.Name" class="dropdown-item">@city.Name</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
                <div class="col-4">
                    <input type="text" class="custom-select" name="city" list="cityname">
